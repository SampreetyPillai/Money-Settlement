<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp"
    app:contentPadding="4dp"
    app:cardBackgroundColor="@color/standard"
    android:outlineAmbientShadowColor="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:text="Sent from"
            android:id="@+id/sentfrom"

            android:fontFamily="monospace"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="Sent To"
            android:id="@+id/sentto"

            android:fontFamily="monospace"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/sentfrom"
            app:layout_constraintTop_toTopOf="parent"
            />


        <TextView
            android:id="@+id/giver"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Giver name here"
            android:fontFamily="monospace"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sentfrom" />

        <TextView
            android:id="@+id/receiver"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Receiver name here"
            android:fontFamily="monospace"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@+id/giver"
            app:layout_constraintTop_toBottomOf="@+id/sentto" />

        <TextView
            android:id="@+id/amount_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:hint="Transaction amount"

            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/giver" />

        <TextView
            android:id="@+id/date_time_display"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Date and Time"
            android:fontFamily="monospace"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@+id/amount_display"
            app:layout_constraintTop_toBottomOf="@+id/receiver" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/occasion_text"
            android:text="Occasion: "
            android:padding="5dp"
            android:textColor="@color/black"
            android:fontFamily="monospace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amount_display" />


        <TextView
            android:id="@+id/occasion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:fontFamily="monospace"
            android:text="The occasion here"
            app:layout_constraintStart_toEndOf="@+id/occasion_text"
            app:layout_constraintTop_toBottomOf="@+id/date_time_display" />

        <Button
            android:id="@+id/t_button_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:backgroundTint="@color/black"
            android:fontFamily="monospace"
            android:padding="3dp"
            android:text="SETTLE Transaction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/occasion_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>